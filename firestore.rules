
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== HÀM TIỆN ÍCH QUYỀN =====
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper safely retrieves user role, defaulting to 'viewer' if doc doesn't exist
    function getRole() {
       return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
         ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
         : 'viewer';
    }

    function isAdmin() {
      return getRole() == 'admin';
    }

    function isBrandOwner() {
      let role = getRole();
      return role == 'brand_owner' || role == 'brandowner';
    }

    // ===== USERS =====
    match /users/{userId} {
      // User đọc chính mình, Admin/Owner đọc được danh sách
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin() || isBrandOwner());
      // Chỉ Admin hoặc Owner mới được tạo/sửa user
      allow write: if isAdmin() || isBrandOwner();
    }

    // ===== BRANDS =====
    match /brands/{brandId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isBrandOwner();
    }

    // ===== GENERATIONS =====
    match /generations/{doc} {
      allow read, write: if isSignedIn();
      
      match /comments/{commentId} {
        allow read, write: if isSignedIn();
      }
    }
    
    // ===== AUDITORS =====
    match /auditors/{docId} {
      allow read, create, update: if isSignedIn();
    }

    // ===== AUDIT_RULES =====
    match /audit_rules/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ===== BRAND_ANALYTICS =====
    match /brand_analytics/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isBrandOwner();
    }

    // ===== BRAND_GUIDELINES =====
    match /brand_guidelines/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isBrandOwner();
      
      match /chunks/{chunkId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    // ===== BRAND ASSETS =====
    match /personas/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isBrandOwner();
    }

    match /products/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isBrandOwner();
    }

    match /content_templates/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isBrandOwner();
    }

    // ===== MẶC ĐỊNH: CHẶN HẾT =====
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
